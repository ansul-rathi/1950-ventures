---
import Container from "../../components/Container.astro";
import { SITE } from "../../lib/consts";
---

<footer class="relative z-10">
  <div class="animate">
    <section class="py-2 sm:py-3 bg-white">
      <Container size="md">
        <div class="grid grid-cols-2 gap-3">
          <a href="/" class="flex flex-col items-center sm:items-start">
            <img
              src="/1950VentureLogo.png"
              alt="1950 Ventures Logo"
              class="h-5 sm:h-7"
            />
          </a>
          <div
            class="flex gap-2 justify-center sm:justify-end items-center text-black text-sm sm:text-base"
          >
            <div
              class="text-black hover:text-black transition-colors duration-300 ease-in-out cursor-pointer"
            >
              Terms
            </div>
            <span class="hidden sm:inline">|</span>
            <div
              class="text-black hover:text-black transition-colors duration-300 ease-in-out cursor-pointer"
            >
              Privacy
            </div>
          </div>
        </div>
      </Container>
    </section>

    <section
      class="py-2 overflow-hidden whitespace-nowrap border-t border-black/10 bg-white"
    >
      <Container size="lg">
        <div class="flex flex-col items-center justify-center">
          <div class="text-sm sm:mt-2 text-black text-center">
            &copy; 2024 | All rights reserved
          </div>
        </div>
      </Container>
    </section>
  </div>
</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault();
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top");
    backToTop?.addEventListener("click", goBackToTop);
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop);
  inintializeBackToTop();
</script>
