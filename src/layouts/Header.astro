---
//import Layout from '../layouts/Layout.astro';
---

<header id="main-header" class="bg-black text-white fixed top-0 left-0 w-full z-50 shadow transition-colors duration-300">
  <div class="container mx-auto flex justify-between items-center p-4">
    <a href="/">
      <img src="/1950venture-logo.png" alt="1950 Ventures Logo" class="h-10" />
    </a>
    <nav class="flex space-x-2 items-center">
      <a href="/contact" class="flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="28" height="28" fill="#FFFFFF">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.16 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.27 1.12.28 2.33.43 3.57.43.55 0 1 .45 1 1v3.5c0 .55-.45 1-1 1C9.72 21 3 14.28 3 6.5 3 5.95 3.45 5.5 4 5.5H7.5c.55 0 1 .45 1 1 0 1.24.15 2.45.43 3.57.09.35 0 .74-.27 1.02l-2.2 2.2z"/>
        </svg>
        <span class="text-gray-300 hover:text-white hidden md:inline">Contact Us</span>
      </a>
    </nav>
  </div>
  <div class="scroll-line bg-blue-500 absolute bottom-0 left-0 h-1" style="width: 0;"></div>
</header>

<style>
  .shadow {
    box-shadow: 0 10px 20px rgba(255, 255, 255, 0.05);
  }

  .scroll-line {
    transition: width 0.1s ease;
  }

  @media (max-width: 768px) {
    .md\:inline {
      display: none;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    window.addEventListener('scroll', () => {
      const scrollLine = document.querySelector('.scroll-line') as HTMLElement;
      if (scrollLine) {
        const docHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (window.scrollY / docHeight) * 100;
        scrollLine.style.width = `${scrolled}%`;
      }
    });
  }
</script>
