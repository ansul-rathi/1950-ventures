---
const { imageText, description = [] } = Astro.props;
---

<div class="flex flex-col md:flex-row items-center mb-12 px-4 md:px-8">
  <div class="hexagon-container mb-4 md:mb-0">
    <div
      class="hexagon"
      style="
        width: 170px; 
        height: 170px; 
        display: flex; 
        justify-content: center; 
        align-items: center; 
        background: #005b96; /* Fallback color */
        color: #fff; 
        font-size: 20px; 
        font-weight: bold; 
        text-align: center;
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
      "
    >
      {imageText}
    </div>
  </div>
  <div class="md:ml-8 text-center md:text-left">
    {
      description.map((item) => (
        <div class="text-sm md:text-base lg:text-lg mb-4">
          {item.title && (
            <span class="font-semibold italic mb-2">{item.title} :</span>
          )}
          {item.description}
        </div>
      ))
    }
  </div>
</div>
