---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <style>

    .bg-fixed {
      background-image: url('/background.jpeg');
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>

  <section class="relative text-white min-h-screen flex items-center justify-center bg-fixed">
    <!-- Overlay to dim the background -->
    <div class="absolute inset-0 bg-black opacity-50"></div>

    <!-- Content -->
    <div class="relative container px-4 py-12 mx-auto max-w-md z-10">
      <form class="bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg p-8 rounded-lg shadow-md">
        <div class="mb-4">
          <label for="name" class="block dark:text-gray-300 font-bold mb-2">Name</label>
          <input type="text" id="name" name="name" class="w-full px-3 py-2 rounded-lg bg-white bg-opacity-20 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div class="mb-4">
          <label for="email" class="block dark:text-gray-300 font-bold mb-2">Email</label>
          <input type="email" id="email" name="email" class="w-full px-3 py-2 rounded-lg bg-white bg-opacity-20 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div class="mb-4">
          <label for="message" class="block dark:text-gray-300 font-bold mb-2">Message</label>
          <textarea id="message" name="message" rows="5" class="w-full px-3 py-2 rounded-lg bg-white bg-opacity-20 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="px-6 py-2 rounded-lg dark:bg-blue-600 hover:bg-blue-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>
        </div>
      </form>
    </div>
  </section>
</Layout>
