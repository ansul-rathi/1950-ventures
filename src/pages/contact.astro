---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap');

    .text-custom {
      font-family: 'Poppins', sans-serif;
      font-weight: 300;
      font-size: 1.2rem; /* Slightly smaller font size */
      line-height: 1.5rem;
    }

    .highlight {
      background-color: rgba(0, 0, 255, 0.5);
      font-weight: 400;
    }

    .header-color {
      color: #b0b0b0;
      font-size: 2rem; /* Slightly smaller header font size */
    }

    .content-container {
      width: 90%; /* Adjusted width for responsiveness */
      max-width: 768px; /* Maximum width */
      margin: 0 auto;
    }

    .form-container {
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      padding: 2rem; /* Increased padding for better spacing */
    }

    .form-input {
      background-color: rgba(255, 255, 255, 0.2);
      border: none;
      color: white;
      padding: 0.75rem;
      width: 100%;
      border-radius: 0.25rem;
      margin-bottom: 1rem;
    }

    .form-input:focus {
      outline: none;
      border: 2px solid #00f;
    }

    .form-label {
      color: #b0b0b0;
      margin-bottom: 0.5rem;
      display: block;
    }

    .form-button {
      background-color: #00f;
      color: white;
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 0.25rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .form-button:hover {
      background-color: #00c;
    }

    .center-content {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh; /* Full viewport height */
      position: relative;
      overflow: hidden; /* Hide overflow to prevent scrolling on video */
    }

    .absolute-full {
      position: absolute;
      inset: 0;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 1; /* Ensure it's above the video */
    }

    .video-bg {
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1; /* Behind the overlay */
    }

    /* Responsive adjustments */
    @media screen and (max-width: 768px) {
      .content-container {
        width: 90%; /* Adjusted width for smaller screens */
      }
      .center-content {
        padding-top: 20vh; /* Additional top padding on mobile */
      }
    }

    @media screen and (max-width: 480px) {
      .form-input,
      .form-button {
        padding: 0.5rem 1rem; /* Smaller padding on smaller screens */
      }
    }
  </style>

  <section class="relative text-white text-custom center-content">
    <!-- Background video -->
    <video class="absolute-full video-bg" autoplay muted loop>
      <source src="/background.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>

    <!-- Overlay to dim the background video -->
    <div class="absolute-full overlay"></div>

    <!-- Content -->
    <div class="relative container px-4 py-12 content-container">
<!--      <h1 class="text-2xl font-bold mb-6 header-color text-center">Let's Connect</h1> -->
      <form class="max-w-lg mx-auto p-4 rounded-lg shadow-md relative z-10 form-container">
        <div class="mb-4">
          <label for="name" class="block font-bold mb-2 form-label">Name</label>
          <input type="text" id="name" name="name" class="w-full px-3 py-2 rounded-lg form-input focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div class="mb-4">
          <label for="email" class="block font-bold mb-2 form-label">Email</label>
          <input type="email" id="email" name="email" class="w-full px-3 py-2 rounded-lg form-input focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>
        <div class="mb-4">
          <label for="message" class="block font-bold mb-2 form-label">Message</label>
          <textarea id="message" name="message" rows="5" class="w-full px-3 py-2 rounded-lg form-input focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="px-6 py-2 rounded-lg form-button hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>
        </div>
      </form>
    </div>
  </section>
</Layout>
