---
import Layout from '../layouts/Layout.astro';

const teamMembers = [
  {
    name: "Abhishek Kumar",
    title: "Co-founder",
    education: "GMP - Harvard Business School, BTech - IIT Kanpur",
    experience: "Executive Chairman of Anuva, Ex-Founder of Ioaln",
    imageUrl: "/team/Abhishek.jpg"
  },
  {
    name: "Pulkit Agrawal",
    title: "Partner",
    education: "MBA - Queenâ€™s University, Canada; BTech - IIT Kanpur",
    experience: "Assistant Professor at MIT, Co-founder of SafetyYou Inc.",
    imageUrl: "/team/Pulkit.jpg"
  },
];
---

<Layout title="Team">
  <div class="team-page">
    <h1 class="team-heading">Our Amazing Team</h1>
    <div class="team-members">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <img src={member.imageUrl} alt={member.name} class="member-photo" />
              <h2 class="member-name">{member.name}</h2>
              <h3 class="member-title">{member.title}</h3>
            </div>
            <div class="flip-card-back">
              <div class="member-details">
                <p class="member-education">{member.education}</p>
                <p class="member-experience">{member.experience}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
  }

  .team-page {
    text-align: center;
    padding-top: 100px;
    height: 100%;
    background: linear-gradient(-54deg, #190230 -23%, #442288, #190230 51%), url('/path/to/your/background-image.jpg') no-repeat center center fixed;
    background-size: cover;
  }

  .team-heading {
    font-size: 2em;
    margin-bottom: 1em;
    color: white;
  }

  .team-members {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .team-member {
    perspective: 1000px;
    margin: 1em;
  }

  .flip-card-inner {
    position: relative;
    width: 200px;
    height: 300px;
    text-align: center;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .team-member:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border: 1px solid #ddd;
    border-radius: 8px;
  }

  .flip-card-front {
    background-color: #fff;
  }

  .flip-card-back {
    background-color: linear-gradient(-54deg, #190230 -23%, #442288, #190230 51%);
    color: white;
    transform: rotateY(180deg);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1em;
  }

  .member-photo {
    width: 100%;
  }

  .member-name {
    font-size: 1.4em;
    margin-top: 1em;
    color: black;
  }

  .member-title {
    font-size: 1em;
    color: black;
  }

  .member-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .member-education,
  .member-experience {
    font-size: 0.9em;
    color: #fff;
    text-align: center;
    margin: 0.5em 0;
  }
  </style>
</Layout>
