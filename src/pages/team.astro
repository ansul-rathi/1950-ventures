---
import Layout from '../layouts/Layout.astro';

const teamMembers = [
  {
    name: "Abhishek Kumar",
    title: "Co-founder",
    education: "GMP - Harvard Business School",
    secondEducation: "BTech - IIT Kanpur",
    experience: "Executive Chairman of Anuva, Ex-Founder of Ioaln",
    additionalDetail: "Since 2022, Abhishek has been creating a pipeline of Deep Tech and AI First companies based in India. He is also Executive Chairman of Anuva (the largest population genomics company in SE Asia based in India). From 2016 to 2021, Abhishek founded Joulon, a KKR funded roll up platform in the energy sector focused on new technologies for energy transition,  acquiring and integrating 11 companies, 3 based in India. Previously, he was part of the core team that raised $1.2Bn to carve out a business from Transocean and then led the technical and operations team till the public listing in 2015. ",
    imageUrl: "/team/Abhishek.jpg"
  },
  {
    name: "Pulkit Agrawal",
    title: "Partner, Technology",
    education: "PhD – UC Berkeley",
    secondEducation: "BTech – IIT Kanpur (Director’s Gold Medal)",
    experience: "Assistant Professor at MIT, Co-founder of SafetyYou Inc.",
    additionalDetail:"Pulkit is an Assistant Professor at MIT where he directs the AI lab. His research on robotics, deep learning, and reinforcement learning has won several awards, including Amazon Research Award, Salesforce Research Award, Sony Faculty Research Award, Fulbright Fellowship and he is a Google Scholar. He co-founded SafelyYou Inc. in 2015, pioneering the use of computer vision to reduce falls in dementia patients.  He serves as an advisor to Common Sense Machines Inc., Lab0 Inc, and Tutor Intelligence Inc. Pulkit was also the co-founder of AI Foundry, a venture studio company in India",
    imageUrl: "/team/Pulkit.jpg"
  },
];
---

<Layout title="Team">
  <div class="team-page bg-white dark:bg-gray-900">
    <h1 class="team-heading text-white dark:text-gray-700">Our Amazing Team</h1>
    <div class="team-members">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="flip-card-inner">
            <div class="flip-card-front bg-white dark:bg-[#00203f]">
              <img src={member.imageUrl} alt={member.name} class="member-photo" />
              <h2 class="member-name text-black dark:text-white">{member.name}</h2>
              <h3 class="member-title text-gray-700 dark:text-gray-400">{member.title}</h3>
              <p class="member-education text-gray-700 dark:text-white">{member.education}</p>
              <p class="member-secondEducation text-gray-700 dark:text-white mt-4">{member.secondEducation}</p>
              <p class="member-experience text-gray-700 dark:text-white">{member.experience}</p>
            </div>
            <div class="flip-card-back bg-gradient-to-r from-purple-800 to-indigo-800 dark:from-gray-800 dark:to-gray-900 text-white">
              <div class="member-details">
                <p class="member-education">{member.additionalDetail}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
    body {
      margin: 0;
    }

    .team-page {
      text-align: center;
      padding-top: 70px;
      height: 100%;
      background: url('/background.jpeg') no-repeat center center fixed;
      background-size: cover;
    }

    .team-heading {
      font-size: 2em;
      margin-bottom: 1em;
    }

    .team-members {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .team-member {
      perspective: 1000px;
      margin: 1em;
    }

    .flip-card-inner {
      position: relative;
      width: 25vw;
      height: 550px;
      text-align: center;
      transition: transform 0.6s;
      transform-style: preserve-3d;
      margin-left: 30px;
      margin-right: 30px;
    }

    .team-member:hover .flip-card-inner {
      transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      border: 1px solid #ddd;
      border-radius: 50px;
      padding: 20px;
    }

    .flip-card-back {
      transform: rotateY(180deg);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1em;
    }

    .member-photo {
      width: 100%;
      border-radius: 50%;
      filter: grayscale(100%);
      padding-left: 40px;
      padding-right: 40px
    }

    .member-name {
      font-size: 1.9em;
      margin-top: 4px;
    }

    .member-title{
      font-size: 1.2em;
      text-align: center;
      margin: 0.5em 0;
    },
    .member-education,
    .member-secondEducation,
    .member-experience {
      font-size: 0.9em;
      text-align: center;
      margin: 0.5em 0;
    }
  </style>
</Layout>
