---
import Layout from '../layouts/Layout.astro';

const teamMembers = [
  {
    name: "Abhishek Kumar",
    title: "Co-founder",
    education: "GMP - Harvard Business School",
    secondEducation: "BTech - IIT Kanpur",
    experience: "Executive Chairman of Anuva, Ex-Founder of Ioaln",
    additionalDetail: "Since 2022, Abhishek has been creating a pipeline of Deep Tech and AI First companies based in India. He is also Executive Chairman of Anuva (the largest population genomics company in SE Asia based in India). From 2016 to 2021, Abhishek founded Joulon, a KKR funded roll up platform in the energy sector focused on new technologies for energy transition,  acquiring and integrating 11 companies, 3 based in India. Previously, he was part of the core team that raised $1.2Bn to carve out a business from Transocean and then led the technical and operations team till the public listing in 2015. ",
    imageUrl: "/team/Abhishek.jpg"
  },
  {
    name: "Pulkit Agrawal",
    title: "Partner, Technology",
    education: "PhD – UC Berkeley",
    secondEducation: "BTech – IIT Kanpur (Director’s Gold Medal)",
    experience: "Assistant Professor at MIT, Co-founder of SafetyYou Inc.",
    additionalDetail: "Pulkit is an Assistant Professor at MIT where he directs the AI lab. His research on robotics, deep learning, and reinforcement learning has won several awards, including Amazon Research Award, Salesforce Research Award, Sony Faculty Research Award, Fulbright Fellowship and he is a Google Scholar. He co-founded SafelyYou Inc. in 2015, pioneering the use of computer vision to reduce falls in dementia patients.  He serves as an advisor to Common Sense Machines Inc., Lab0 Inc, and Tutor Intelligence Inc. Pulkit was also the co-founder of AI Foundry, a venture studio company in India",
    imageUrl: "/team/Pulkit.jpg"
  },
];
---

<Layout title="Team">
  <div class="relative team-page dark:bg-white bg-gray-900">
    <!-- Overlay to dim the background -->
    <div class="absolute top-0 left-0 w-full h-full bg-gray-200 opacity-50 z-10"></div>

    <!-- Heading above the overlay -->
    <!-- <h1 class="relative z-20 text-black dark:text-black team-heading">Our Amazing Team</h1> -->

    <!-- Content -->
    <div class="relative team-members z-20 md:flex">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="card md:w-[25vw]">
            <div class="card-front dark:bg-white bg-[#005b96] items-center ">
              <img src={member.imageUrl} alt={member.name} class="member-photo" />
              <h2 class="member-name dark:text-black text-white">{member.name}</h2>
              <h3 class="member-title dark:text-gray-700 text-gray-300">{member.title}</h3>
              <p class="member-education dark:text-gray-700 text-white">{member.education}</p>
              <p class="member-secondEducation dark:text-gray-700 text-white mt-4">{member.secondEducation}</p>
              <p class="member-experience dark:text-gray-700 text-white">{member.experience}</p>
            </div>
            <div class="card-back bg-[#005b96] text-white">
              <div class="member-details">
                <p class="member-additional">{member.additionalDetail}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
    body {
      margin: 0;
    }

    .team-page {
      text-align: center;
      padding-top: 70px;
      height: 100%;
      background: url('/backgroundSecondary.jpg') no-repeat center center fixed;
      background-size: cover;
    }

    .team-heading {
      font-size: 2em;
      margin-bottom: 1em;
    }

    .team-members {
      flex-wrap: wrap;
      justify-content: center;
    }

    .team-member {
      margin: 1em;
    }

    .card {
      position: relative;
      height: 550px;
      text-align: center;
      overflow: hidden;
      border: 1px solid black;
      border-radius: 50px;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }

    .card-front, .card-back {
      display: flex;
      flex-direction: column;
      /* justify-content: center; */
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      padding: 20px;
      transition: transform 0.6s;
    }

    .card-front {
      z-index: 2;
      transform: translateY(0);
    }

    .card-back {
      z-index: 3;
      transform: translateY(100%);
      border-radius: 10px;
    }

    .card:hover .card-front {
      /* transform: translateY(-100%); */
    }

    .card:hover .card-back {
      transform: translateY(40%);
    }

    .member-photo {
      width: 100%;
      border-radius: 50%;
      filter: grayscale(100%);
      padding-left: 40px;
      padding-right: 40px;
    }

    .member-photo {
      width: 100%;
      border-radius: 50%;
      filter: grayscale(100%);
      padding-left: 40px;
      padding-right: 40px;
    }

    .member-name {
      font-size: 1.9em;
      margin-top: 4px;
    }

    .member-title {
      font-size: 1.2em;
      text-align: center;
      margin: 0.5em 0;
    }

    .member-education,
    .member-secondEducation,
    .member-experience {
      font-size: 0.9em;
      text-align: center;
      margin: 0.5em 0;
    }

    .member-additional {
      font-size: 0.9em;
      text-align: left;
    }
  </style>
</Layout>
